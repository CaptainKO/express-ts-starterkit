{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "noImplicitAny": true,
        "baseUrl": ".",
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata":true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "Node",
        "target": "es6",
        "outDir": "dist",
        "sourceMap": false,
        "declaration": true,
        "lib": [
            "es2017.object",
            "es2015",
            "es2017",
        ],
        "paths": {
            "@entity/*": ["src/entity/*"],
            "@middlewares/*": ["src/middlewares/*"]
        }
    },
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "watch": true,
    "include": [
        "src/**/*"
    ]
}